using System.ComponentModel;
using System.ComponentModel.DataAnnotations;

namespace Client.Repositories
{
    public class ClientUser
    {
        [Key]
        public Guid Id { get; set; } = Guid.NewGuid();
        [Required(ErrorMessage = "Informe o nome completo")]
        [MinLength(3, ErrorMessage = "O nome deve conter pelo menos 3 caracteres")]
        [MaxLength(50, ErrorMessage = "O nome deve conter no máximo 50 caracteres")]
        public string Name;
        [Required(ErrorMessage = "Informe o e-mail.")]
        [EmailAddress(ErrorMessage = "O email fornecido não é válido")]
        public string Email { get; set; }
        [Required(ErrorMessage = "Informe a senha.")]
        [MinLength(6, ErrorMessage = "A senha deve conter pelo menos 6 caracteres")]
        public string Password { get; set; }

        public Client.Models.Enterprise? Enterprise { get; set; }
    }
}
